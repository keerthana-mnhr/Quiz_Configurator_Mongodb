<Window x:Class="Quiz_Configurator.Dialogs.PackSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Quiz_Configurator.Dialogs"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        Title="Select Question Pack" Height="350" Width="300"
        WindowStartupLocation="CenterOwner">
    <Border BorderBrush="Black" BorderThickness="2" Background="White">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>

           
            <Grid Grid.Row="0" Background="LightBlue">
                <TextBlock Text="Select Question Pack" VerticalAlignment="Center" 
                          Margin="10,0" FontWeight="Bold" FontSize="12"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="✕" Width="30" Height="30" 
                           Background="Maroon" Foreground="White"
                           BorderThickness="0" Click="Close_Click"
                           FontWeight="Bold"/>
                </StackPanel>
            </Grid>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="15">
                <StackPanel>
                    <TextBlock Text="Available Question Packs:" FontWeight="Bold" 
                              Margin="0,0,0,10"/>
                    <ListBox x:Name="PackListBox" Height="200" 
                            BorderBrush="Black" BorderThickness="1"
                            SelectionChanged="PackListBox_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="5">
                                    <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="12"/>
                                    <TextBlock FontSize="10" Foreground="Gray">
                                        <TextBlock.Text>
                                            <MultiBinding StringFormat="{}{0} - {1} questions - {2}s timer">
                                                <Binding Path="Difficulty"/>
                                                <Binding Path="Questions.Count"/>
                                                <Binding Path="TimeLimitInSeconds"/>
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </ScrollViewer>

            <StackPanel Grid.Row="2" Orientation="Horizontal" 
                       HorizontalAlignment="Right" Margin="0,0,15,10">
                <Button Content="Select" Width="70" Height="30" 
                       Background="LightGreen" BorderBrush="Black" BorderThickness="1"
                       Click="Select_Click" Margin="0,0,10,0" FontWeight="Bold"/>
                <Button Content="Cancel" Width="70" Height="30" 
                       Background="LightGray" BorderBrush="Black" BorderThickness="1"
                       Click="Cancel_Click" FontWeight="Bold"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>