<Window x:Class="Quiz_Configurator.Dialogs.New_Question_Pack"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Quiz_Configurator"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        Height="280" Width="220"
        WindowStartupLocation="CenterOwner">
    <Border BorderBrush="Black" BorderThickness="2" Background="White">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>

          
            <Grid Grid.Row="0" Background="LightBlue">
                <TextBlock Text="New Question Pack" VerticalAlignment="Center" 
                          Margin="8,0" FontWeight="Bold"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="✕" Width="25" Height="25" 
                           Background="Maroon" Foreground="White"
                           BorderThickness="0" Click="Button_Click"
                           FontWeight="Bold"/>
                </StackPanel>
            </Grid>

            <StackPanel Grid.Row="1" Margin="15,15,15,5">
               
                <TextBlock Text="Pack Name:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="PackNameTextBox" Height="25" 
                        BorderBrush="Black" BorderThickness="1"
                        Margin="0,0,0,15"/>

              
                <TextBlock Text="Difficulty:" FontWeight="Bold" Margin="0,0,0,5"/>
                <ComboBox x:Name="DifficultyComboBox" Height="25" 
                         BorderBrush="Black" BorderThickness="1"
                         Margin="0,0,0,15" SelectionChanged="ComboBox_SelectionChanged">
                    <ComboBoxItem Content="Easy"/>
                    <ComboBoxItem Content="Medium" IsSelected="True"/>
                    <ComboBoxItem Content="Difficult"/>
                </ComboBox>

                <TextBlock Text="Category:" FontWeight="Bold" Margin="0,0,0,5"/>
                <ComboBox x:Name="CategoryComboBox"
                           Height="25"
                            BorderBrush="Black" BorderThickness="1"
                            Margin="0,0,0,15"
                        ItemsSource="{Binding Categories}"
                            DisplayMemberPath="Name"
                            SelectedItem="{Binding SelectedCategory, Mode=TwoWay}">
                </ComboBox>

                <TextBlock Text="Time Limit:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBlock Text="{Binding ElementName=TimeLimitSlider, Path=Value, StringFormat='{}{0:F0} Seconds'}" 
                          HorizontalAlignment="Right" Margin="0,0,0,5"/>
                <Slider x:Name="TimeLimitSlider" Minimum="10" Maximum="120" Value="30" 
                       TickFrequency="10" TickPlacement="BottomRight"
                       Margin="0,0,0,10"/>
            </StackPanel>

           
            <StackPanel Grid.Row="2" Orientation="Horizontal" 
                       HorizontalAlignment="Right" Margin="0,0,15,10">
                <Button Content="Create" Width="60" Height="25" 
                       Background="LightGreen" BorderBrush="Black" BorderThickness="1"
                       Click="Create_Click" Margin="0,0,10,0" FontWeight="Bold"/>
                <Button Content="Cancel" Width="60" Height="25" 
                       Background="LightGray" BorderBrush="Black" BorderThickness="1"
                       Click="Cancel_Click" FontWeight="Bold"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>