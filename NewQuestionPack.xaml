<Window x:Class="Quiz_Configurator.New_Question_Pack"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Quiz_Configurator"
        mc:Ignorable="d"
       WindowStyle="None"
        AllowsTransparency="True"
        Height="250" Width="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="LightBlue"/>
        <TextBlock Text="New Question Pack" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="X"
                    Height="20" 
                    Background="Maroon"
                    Margin="1,1,2,1"
                    Click="Button_Click"/>
        </StackPanel>

        <Grid Grid.Row="1" Margin="5,10,2,2">
            <TextBlock Text="Pack Name:" FontWeight="ExtraBlack" Margin="10,0,6,0"/>
            <TextBox Text="/PackName/"
                x:Name="PackName"  
                     Height="20" Width="170"
                     Margin="0,10,2,170"
                     BorderBrush="Black"
             />
            <TextBlock Text="Difficulty:" FontWeight="ExtraBlack" Margin="10,50,6,10"/>
            <ComboBox Height="20" Width="170"
                      Margin="0,20,2,80" SelectionChanged="ComboBox_SelectionChanged">
                <ComboBoxItem Content="Easy"/>
                <ComboBoxItem Content="Medium"/>
                <ComboBoxItem Content="Difficult"/>
            </ComboBox>

            <TextBlock Text="Time Limit:" FontWeight="ExtraBlack" Margin="10,95,6,100"/>
            <TextBlock Text="{Binding ElementName=TimeLimitSlider, Path=Value, StringFormat=\{0:F0\}\ Seconds}" 
                       HorizontalAlignment="Right"
                       Margin="50,95,5,100"/>
            
            <Slider x:Name="TimeLimitSlider"  Margin="0,115,1,1" Minimum="0" 
                    Maximum="120" Value="50" 
                    TickFrequency="5" TickPlacement="BottomRight"
                    Width="170"/>


            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
            <Button  Background="LightBlue"
                     Content="Create" FontSize="12" Height="20" Width="40"
                     Margin="40,130,10,0"
                     BorderBrush="Black"
                    />
            <Button Background="LightBlue" HorizontalAlignment="Right"  
                    Content="Cancel" FontSize="12" Height="20" Width="40"
                    Margin="20,130,10,0"
                    BorderBrush="Black"
            />
        </StackPanel>

        </Grid>

    </Grid>
</Window>