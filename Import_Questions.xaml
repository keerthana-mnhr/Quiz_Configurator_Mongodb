<Window x:Class="Quiz_Configurator.Import_Questions"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Quiz_Configurator"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        Title="Import_Questions" Height="250" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="LightBlue" >
            <TextBlock Text="Import Questions From Open Trivia Database" 
                       FontSize="12" Margin="3,6,0,0"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="X"
                Height="20" Width="20"
                Background="Maroon"
                Margin="1,1,2,1"
                Click="Button_Click"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">

            <TextBlock Text="Category" FontSize="10" FontWeight="Heavy"
                       Margin="20,10,20,190"/>
            <ComboBox x:Name="Question_Category" 
                      Height="25" Width="260" Margin="20,37,20,159"/>

            <TextBlock Text="Difficulty" FontSize="10" FontWeight="Heavy"
                        Margin="20,70,20,130"/>
            <ComboBox x:Name="Question_Difficulty"    
                      Height="25" Margin="20,90,20,106" Width="260"
                     />




            <TextBlock Text="Number Of Questions:"
                   FontWeight="ExtraBlack" FontSize="12"
                   Margin="20,130,20,65" Grid.ColumnSpan="2" />

            <TextBlock Text="{Binding ElementName=NumberOfQuestionSlider, Path=Value, StringFormat=\{0:F0\}}" 
                       HorizontalAlignment="Right"
                       Margin="3,130,20,65" Width="20"
                       FontSize="15" Grid.Column="1"/>

            <Slider x:Name="NumberOfQuestionSlider"  Margin="20,153,20,49" Minimum="0" 
                    Maximum="20" Value="1" 
                    TickFrequency="1" TickPlacement="BottomRight" Grid.ColumnSpan="2"/>


            <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom"  Width="200">

                <Button  Background="LightBlue"
                     Content="Import" Click="Button_Click"
                         FontSize="12" Height="25" Width="70"
                     BorderBrush="Black"  
                         Margin="0,181,30,10"
                />

                <Button Background="LightBlue"
                        Content="Cancel" Click="Button_Click_1"
                    FontSize="12" Width="70" Foreground="Black"
                         Height="25"
                    BorderBrush="Black"
                    Margin="5,181,30,10"
                 />
            </StackPanel>
        </Grid>

    </Grid>
</Window>
