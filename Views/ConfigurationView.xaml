<UserControl x:Class="Quiz_Configurator.Views.ConfigurationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Quiz_Configurator.Views"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="1000">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" MinHeight="450"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="LightBlue" BorderBrush="Black" BorderThickness="1" 
                Margin="10" Padding="10">
            <TextBlock Text="QUIZ CONFIGURATOR" FontSize="16" FontWeight="Bold" 
                      HorizontalAlignment="Center"/>
        </Border>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <Grid Margin="10" MinWidth="750" MinHeight="400">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="380" MinWidth="350"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="380" MinWidth="350"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" BorderBrush="Black" BorderThickness="1" 
                        Background="White" Padding="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*" MinHeight="200"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                      Text="{Binding MainWindowViewModel.ActivePack.Name, StringFormat='Package: {0}', FallbackValue='Package: No Active Pack'}" 
                                      FontWeight="Bold" FontSize="12"
                                      HorizontalAlignment="Left" 
                                      VerticalAlignment="Center"
                                      Foreground="DarkBlue"
                                      TextWrapping="Wrap"/>

                            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Command="{Binding AddQuestionFromMenuCommand}"
                                        Background="Transparent" 
                                        BorderThickness="0"
                                        Width="30" Height="30" 
                                        Margin="5,0"
                                        ToolTip="Add New Question">
                                    <fa:FontAwesome Icon="Plus" FontSize="18" Foreground="DarkGreen"/>
                                </Button>

                                <Button Command="{Binding EditPackCommand}"
                                        Background="Transparent" 
                                        BorderThickness="0"
                                        Width="30" Height="30" 
                                        Margin="5,0"
                                        ToolTip="Pack Options">
                                    <fa:FontAwesome Icon="List" FontSize="18" Foreground="DarkBlue"/>
                                </Button>
                            </StackPanel>
                        </Grid>

                        <TextBlock Grid.Row="1" 
                                  Text="Questions" FontWeight="Bold" FontSize="14"
                                  HorizontalAlignment="Center" Margin="0,0,0,10"/>

                        <ListBox Grid.Row="2"
                                ItemsSource="{Binding MainWindowViewModel.ActivePack.Questions}"
                                SelectedItem="{Binding SelectedQuestion}"
                                BorderBrush="Black" BorderThickness="1"
                                MinHeight="200">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="25"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding Query}" FontWeight="Bold" TextWrapping="Wrap" MaxWidth="300"/>
                                            <TextBlock Text="{Binding CorrectAnswer, StringFormat='Correct: {0}'}" 
                                                      FontSize="10" Foreground="Green" TextWrapping="Wrap" MaxWidth="300"/>
                                        </StackPanel>

                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <Button Grid.Row="3"
                               Content="Delete Selected Question" 
                                Command="{Binding DeleteQuestionCommand}"
                                Height="30" FontSize="11"
                                Background="LightCoral" 
                                BorderBrush="Black" BorderThickness="1"
                                Margin="0,10,0,0"/>
                    </Grid>
                </Border>

                <Border Grid.Column="2" BorderBrush="Black" BorderThickness="1" 
                        Background="White" Padding="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <TextBlock FontWeight="Bold" FontSize="14" HorizontalAlignment="Center" 
                                          Margin="0,0,0,15" TextWrapping="Wrap">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="Add New Question"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsEditingQuestion}" Value="True">
                                                    <Setter Property="Text" Value="Edit Question"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>

                                <TextBlock Text="{Binding MainWindowViewModel.ActivePack.SelectedCategory.Name, FallbackValue='No Category'}"
                                      FontWeight="Bold" FontSize="12"
                                      Foreground="DarkGreen"
                                      Margin="0,5,0,0"
                                      HorizontalAlignment="Left"/>

                                <TextBlock Text="Question:" FontWeight="Bold" Margin="0,0,0,5"/>
                                <TextBox Text="{Binding NewQuestionText}" 
                                         Height="50" TextWrapping="Wrap" 
                                         BorderBrush="Black" BorderThickness="1"
                                         Margin="0,0,0,10" AcceptsReturn="True"
                                         VerticalScrollBarVisibility="Auto"/>

                                <TextBlock Text="Correct Answer:" FontWeight="Bold" Margin="0,0,0,5"/>
                                <TextBox Text="{Binding CorrectAnswer}" 
                                         Height="25" 
                                         BorderBrush="Black" BorderThickness="1"
                                         Margin="0,0,0,10"/>

                                <TextBlock Text="First Incorrect Answer:" FontWeight="Bold" Margin="0,0,0,5"/>
                                <TextBox Text="{Binding FirstIncorrectAnswer}" 
                                         Height="25" 
                                         BorderBrush="Black" BorderThickness="1"
                                         Margin="0,0,0,10"/>

                                <TextBlock Text="Second Incorrect Answer:" FontWeight="Bold" Margin="0,0,0,5"/>
                                <TextBox Text="{Binding SecondIncorrectAnswer}" 
                                         Height="25" 
                                         BorderBrush="Black" BorderThickness="1"
                                         Margin="0,0,0,10"/>

                                <TextBlock Text="Third Incorrect Answer:" FontWeight="Bold" Margin="0,0,0,5"/>
                                <TextBox Text="{Binding ThirdIncorrectAnswer}" 
                                         Height="25" 
                                         BorderBrush="Black" BorderThickness="1"
                                         Margin="0,0,0,15"/>
                            </StackPanel>
                        </ScrollViewer>

                        <StackPanel Grid.Row="1" Margin="0,10,0,0">
                            <Button Content="Add Question" 
                                    Command="{Binding AddQuestionCommand}"
                                    Height="35" FontSize="12" FontWeight="Bold"
                                    Background="LightGreen" 
                                    BorderBrush="Black" BorderThickness="1"
                                    Margin="0,0,0,5">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsEditingQuestion}" Value="True">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>

                            <Button Content="Update Question" 
                                    Command="{Binding UpdateQuestionCommand}"
                                    Height="35" FontSize="12" FontWeight="Bold"
                                    Background="Orange" 
                                    BorderBrush="Black" BorderThickness="1"
                                    Margin="0,0,0,5">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsEditingQuestion}" Value="True">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>

                            <Button Content="Cancel" 
                                    Command="{Binding CancelEditCommand}"
                                    Height="30" FontSize="11"
                                    Background="LightGray" 
                                    BorderBrush="Black" BorderThickness="1">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsEditingQuestion}" Value="True">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>