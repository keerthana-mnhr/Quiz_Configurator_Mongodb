<UserControl x:Class="Quiz_Configurator.Views.PlayerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Quiz_Configurator.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="LightBlue" BorderBrush="Black" BorderThickness="1" 
                Margin="10" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                          Text="{Binding ActivePack.Name, StringFormat='Playing: {0}'}" 
                          FontSize="16" FontWeight="Bold"
                          VerticalAlignment="Center"/>


                <TextBlock Grid.Column="1"
                          FontSize="14" FontWeight="Bold"
                          VerticalAlignment="Center"
                          Margin="20,0">
                    <TextBlock.Text>
                        <MultiBinding StringFormat="Question {0} of {1}">
                            <Binding Path="CurrentQuestionNumber"/>
                            <Binding Path="TotalQuestions"/>
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>

                <Border Grid.Column="2" Background="Red" CornerRadius="5" Padding="10,5"
                        Margin="10,0,0,0">
                    <TextBlock Text="{Binding TimeRemaining}" 
                              Foreground="White" FontSize="18" FontWeight="Bold"
                              HorizontalAlignment="Center"/>
                </Border>
            </Grid>
        </Border>


        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="20">
            <Grid MaxWidth="900" HorizontalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="LightYellow" BorderBrush="Black" BorderThickness="2" 
                        CornerRadius="5" Padding="20" Margin="0,0,0,30">
                    <TextBlock Text="{Binding CurrentQuestion.Query}" 
                              FontSize="18" FontWeight="Bold"
                              TextWrapping="Wrap" HorizontalAlignment="Center"/>
                </Border>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="15"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                  
                    <Button Grid.Row="0" Grid.Column="0" 
                            Padding="15" MinHeight="80"
                            Command="{Binding AnswerQuestionCommand}"
                            CommandParameter="{Binding ShuffledAnswers[0]}"
                            BorderBrush="Black" BorderThickness="2"
                            FontSize="14" FontWeight="Bold">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="{Binding ShuffledAnswers[0].BackgroundColor}"/>
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="LightGray"/>
                                    </Trigger>
                                    <DataTrigger Binding="{Binding ShuffledAnswers[0].IsCorrect}" Value="True">
                                        <Setter Property="Background" Value="LightGreen"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding ShuffledAnswers[0].IsIncorrect}" Value="True">
                                        <Setter Property="Background" Value="LightCoral"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <TextBlock Text="{Binding ShuffledAnswers[0].Text}" TextWrapping="Wrap" 
                                  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Button>

              
                    <Button Grid.Row="0" Grid.Column="2" 
                            Padding="15" MinHeight="80"
                            Command="{Binding AnswerQuestionCommand}"
                            CommandParameter="{Binding ShuffledAnswers[1]}"
                            BorderBrush="Black" BorderThickness="2"
                            FontSize="14" FontWeight="Bold">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="{Binding ShuffledAnswers[1].BackgroundColor}"/>
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="LightGray"/>
                                    </Trigger>
                                    <DataTrigger Binding="{Binding ShuffledAnswers[1].IsCorrect}" Value="True">
                                        <Setter Property="Background" Value="LightGreen"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding ShuffledAnswers[1].IsIncorrect}" Value="True">
                                        <Setter Property="Background" Value="LightCoral"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <TextBlock Text="{Binding ShuffledAnswers[1].Text}" TextWrapping="Wrap" 
                                  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Button>

                 
                    <Button Grid.Row="2" Grid.Column="0" 
                            Padding="15" MinHeight="80"
                            Command="{Binding AnswerQuestionCommand}"
                            CommandParameter="{Binding ShuffledAnswers[2]}"
                            BorderBrush="Black" BorderThickness="2"
                            FontSize="14" FontWeight="Bold">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="{Binding ShuffledAnswers[2].BackgroundColor}"/>
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="LightGray"/>
                                    </Trigger>
                                    <DataTrigger Binding="{Binding ShuffledAnswers[2].IsCorrect}" Value="True">
                                        <Setter Property="Background" Value="LightGreen"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding ShuffledAnswers[2].IsIncorrect}" Value="True">
                                        <Setter Property="Background" Value="LightCoral"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <TextBlock Text="{Binding ShuffledAnswers[2].Text}" TextWrapping="Wrap" 
                                  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Button>

                  
                    <Button Grid.Row="2" Grid.Column="2" 
                            Padding="15" MinHeight="80"
                            Command="{Binding AnswerQuestionCommand}"
                            CommandParameter="{Binding ShuffledAnswers[3]}"
                            BorderBrush="Black" BorderThickness="2"
                            FontSize="14" FontWeight="Bold">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="{Binding ShuffledAnswers[3].BackgroundColor}"/>
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="LightGray"/>
                                    </Trigger>
                                    <DataTrigger Binding="{Binding ShuffledAnswers[3].IsCorrect}" Value="True">
                                        <Setter Property="Background" Value="LightGreen"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding ShuffledAnswers[3].IsIncorrect}" Value="True">
                                        <Setter Property="Background" Value="LightCoral"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <TextBlock Text="{Binding ShuffledAnswers[3].Text}" TextWrapping="Wrap" 
                                  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Button>
                </Grid>
            </Grid>
        </ScrollViewer>

      
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" 
                   Margin="20">
            <Button Content="Next Question" 
                    Command="{Binding NextQuestionCommand}"
                    Height="40" Width="120" FontSize="12" FontWeight="Bold"
                    Background="LightBlue" BorderBrush="Black" BorderThickness="1"
                    Margin="0,0,15,0"/>

            <Button Content="End Quiz" 
                    Command="{Binding EndQuizCommand}"
                    Height="40" Width="120" FontSize="12" FontWeight="Bold"
                    Background="LightCoral" BorderBrush="Black" BorderThickness="1"/>
        </StackPanel>
    </Grid>
</UserControl>