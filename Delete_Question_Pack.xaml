<Window x:Class="Quiz_Configurator.Delete_Question_Pack"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Quiz_Configurator"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        Title="Delete_Question_Pack" Height="150" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>

        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="LightBlue" >
            <TextBlock Text="Delete Question Pack?" Margin="3,1,0,0"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="X"
                       Height="20" Width="20"
                       Background="Maroon"
                       Margin="1,1,2,1"
                       Click="Button_Click"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1" >
            <TextBlock Text="Are you sure you want to Delete?" 
                       FontWeight="Heavy" FontSize="11"
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>

        <Grid Grid.Row="2">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button  Background="LightBlue"
                         Content="Yes" FontSize="12" Height="25" Width="60"
                                Margin="80,5,10,6"
                             BorderBrush="Black"
             />
            <Button Background="LightBlue" HorizontalAlignment="Right"  
                 Content="No" FontSize="12" Height="25" Width="60"
                    Margin="20,5,10,6"
                     BorderBrush="Black"/>
             </StackPanel>
        </Grid>
    </Grid>

</Window>
