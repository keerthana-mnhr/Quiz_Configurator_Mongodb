<Window x:Class="Quiz_Configurator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Quiz_Configurator"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        mc:Ignorable="d"
        Title="Quiz Configurator" Height="450" Width="800">

    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="New Question Pack">
                    <MenuItem.Icon>
                        <fa:FontAwesome Icon="Plus" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Select Question Pack">
                    <MenuItem.Icon>
                        <fa:FontAwesome Icon="Folder" />
                    </MenuItem.Icon>
                    <MenuItem Header="Default Question Pack(Medium)">
                        <MenuItem.Icon>
                            <fa:FontAwesome Icon="List" />
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem>
                <MenuItem Header="Delete Question Pack">
                    <MenuItem.Icon>
                        <fa:FontAwesome Icon="Remove" />
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="Import Questions" InputGestureText="Ctrl+I">
                    <MenuItem.Icon>
                        <fa:FontAwesome Icon="Download" />
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="Exit" InputGestureText="Alt+F4">
                    <MenuItem.Icon>
                        <fa:FontAwesome Icon="PowerOff" />
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>

            <MenuItem Header="_Edit">

                <MenuItem Header="Add Question" InputGestureText="Insert">
                    <MenuItem.Icon>
                        <fa:FontAwesome Icon="Plus"/>
                    </MenuItem.Icon>
                </MenuItem>

                <MenuItem Header="Delete Question" InputGestureText="Delete">
                    <MenuItem.Icon>
                        <fa:FontAwesome Icon="Minus"/>
                    </MenuItem.Icon>
                </MenuItem>

                <MenuItem Header="Pack Options" InputGestureText="Ctrl+O">
                    <MenuItem.Icon>
                        <fa:FontAwesome Icon="List"/>
                    </MenuItem.Icon>
                </MenuItem>

            </MenuItem>
            <MenuItem Header="_View">

                <MenuItem Header="Play" InputGestureText="Ctrl+P">
                    <MenuItem.Icon>
                        <fa:FontAwesome Icon="Play" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Edit" InputGestureText="Ctrl+E">
                    <MenuItem.Icon>
                        <fa:FontAwesome Icon="Edit" />
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="Fullscreen" InputGestureText="Alt+Enter">
                    <MenuItem.Icon>
                        <fa:FontAwesome Icon="Expand" />
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>

        </Menu>
        <Grid DockPanel.Dock="Top">
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="215"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <DockPanel Grid.Column="0" LastChildFill="False">
                <Menu DockPanel.Dock="Left"
                      Background="White">
                <MenuItem Header="Default Question Pack"  FontWeight="DemiBold"/>
                </Menu>
            </DockPanel>
          

            <StackPanel Grid.Column="1" Width="Auto" Orientation="Horizontal"  HorizontalAlignment="Left" Margin="0,0,0,0">
                <Button Width="24" Height="20" Margin="0,0,0,0">
                    <fa:FontAwesome Icon="ListUl"/>

                </Button>
                <Button Width="24" Height="20" Margin="5,0,0,0">
                    <fa:FontAwesome Icon="PlusSquareOutline"/>

                </Button>
                <Button Width="24" Height="20" Margin="5,0,0,0">
                    <fa:FontAwesome Icon="MinusSquareOutline"/>

                </Button>

            </StackPanel>

        </Grid>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="1"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" 
                    BorderBrush="Gray"
                    BorderThickness="1" 
                    Margin="2,1,1,2"
                    />


            <GridSplitter Grid.Column="1"/>

            <Border Grid.Column="2"/>

        </Grid>

    </DockPanel>


</Window>