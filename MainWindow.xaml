<Window x:Class="Quiz_Configurator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Quiz_Configurator"
        xmlns:fa="http://schemas.fontawesome.io/icons/" 
        xmlns:views="clr-namespace:Quiz_Configurator.Views"
        mc:Ignorable="d"
        Title="Quiz Configurator" 
        Height="600" Width="1000"
        MinHeight="500" MinWidth="800"
        WindowState="Normal">
    <Window.InputBindings>
        <KeyBinding Gesture="Insert" Command="{Binding ConfigurationViewModel.AddQuestionFromMenuCommand}" />
        <KeyBinding Gesture="Delete" Command="{Binding ConfigurationViewModel.DeleteQuestionCommand}" />
        <KeyBinding Gesture="Ctrl+O" Command="{Binding ConfigurationViewModel.EditPackCommand}" />
        <KeyBinding Gesture="Ctrl+P" Command="{Binding PlayerViewModel.StartQuizCommand}" />
       
    </Window.InputBindings>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <views:MenuView Grid.Row="0" DataContext="{Binding}" />

       
        <views:ConfigurationView Grid.Row="1" DataContext="{Binding ConfigurationViewModel}">
            <views:ConfigurationView.Style>
                <Style TargetType="views:ConfigurationView">
                    <Setter Property="Visibility" Value="Visible"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding PlayerViewModel.IsPlaying}" Value="True">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </views:ConfigurationView.Style>
        </views:ConfigurationView>

        
        <views:PlayerView Grid.Row="1" DataContext="{Binding PlayerViewModel}">
            <views:PlayerView.Style>
                <Style TargetType="views:PlayerView">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsPlaying}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </views:PlayerView.Style>
        </views:PlayerView>
    </Grid>
</Window>